<!--pages/detail/detail.wxml-->
<view style="padding-bottom:100rpx;">
  <view class="list-banner-wrap">
    <swiper class='list-banner' bindchange="slideChange">
      <block wx:if="{{shopNameInfo.photos.length > 0}}">
        <block wx:for="{{shopNameInfo.photos}}" wx:for-index="index" wx:key="index">
          <swiper-item class="banner-image-wrap">
            <image class='banner-image' mode="aspectFill" src="{{imageUrl + item.url}}" data-urls="{{shopNameInfo.photos}}" data-url="{{item.url}}" bindtap="showImage"></image>
          </swiper-item>
        </block>
      </block>
      <block wx:else>
        <swiper-item>
          <image class='banner-default-image' src="{{defaultPath}}"></image>
        </swiper-item>
      </block>
    </swiper>
    <view class="slide-block-wrap" wx:if="{{cotalNumber > 0}}">
      <view class="slide-block">
        <text>{{currentIndex}}</text>
        <text>/</text>
        <text>{{cotalNumber}}</text>
      </view>
    </view>
  </view>
  <view class="list-box">
    <view class='shop-box'>
      <text class='shop-name-shopName'>{{shopNameInfo.shopName}}</text>
      <!-- <view class='list-item-appraise'>
        <image src="/images/appraise@2.png" class="appraise-icon"></image>
        <image src="/images/appraise@2.png" class="appraise-icon"></image>
        <image src="/images/appraise@2.png" class="appraise-icon"></image>
        <image src="/images/appraise@2.png" class="appraise-icon"></image>
        <image src="/images/appraise@2.png" class="appraise-icon"></image>
      </view> -->
      <view class="service-order">
        <text class='sell-text'>已售 {{shopNameInfo.countService}} 单</text>
      </view>
    </view>

    <view class='shop-map' bindtap='openMap'>
      <view class='shop-address-box'>
        <text class='shop-address'>{{shopNameInfo.address}}</text>
        <text wx:if="{{shopNameInfo.finalDistance}}" class='sell-text'>距您 {{shopNameInfo.finalDistance}}</text>
      </view>
      <view class='shop-right-map'>
        <image src="/images/map.png" class='shop-map-icon'></image>
        <text class="shop-map-text">地图</text>
      </view>
    </view>

    <view class='shopkeeper-box'>
      <text class='shop-name'>店长风采</text>
      <text class='shop-text'>专业店长汽修服务</text>
      <view class='shop-map-shop'>
        <image wx:if="{{shopNameInfo.managerAvatar}}" class='portrait-icon' data-avatar="{{shopNameInfo.managerAvatar}}" bindtap="imageAvatar" src="{{imageUrl+shopNameInfo.managerAvatar}}"></image>
        <image wx:else class='portrait-icon' src="/images/avatar.png"></image>
        <view class='portrait-text'>
          <view class="portrait-text-identity">
            <text class="portrait-text-identity-title">{{shopNameInfo.managerName}}</text>
            <image src='/images/technician.png' mode="aspectFit" class='portrait-text-identity-icon'></image>
            <text class="portrait-text-identity-auth">技师认证</text>
          </view>
          <view>
            <text class='shop-text'>联系时间 {{shopNameInfo.managerContactStartTime}}{{shopNameInfo.managerContactStartTime? '~' : ''}}{{shopNameInfo.managerContactEndTime}}</text>
          </view>
        </view>
        <view class='shopkeeper-itme' bindtap='phoneCall'>
          <image src='/images/phone.png' class='shop-right-icon'></image>
          <text class="callphone">致电</text>
        </view>
      </view>
    </view>

    <view class="{{((shopNameInfo.brandList.length>0 || shopNameInfo.workYear || shopNameInfo.managerRemark)) ? 'list-text':'list-text-defalut'}}" wx:if="{{shopNameInfo.brandList || shopNameInfo.workYear || shopNameInfo.managerRemark}}">
      <view class='introduce-text-info' wx:if="{{shopNameInfo.brandList.length>0}}">
        <view class='introduce-info'>
          <text>擅长品牌</text>
        </view> 
        <view class="introduce-content">
          <view>
            <block wx:for="{{shopNameInfo.brandList}}" wx:for-index="index" wx:key="index">
              <text style="color:#363636;">{{item}}</text>
              <text wx:if="{{!(index === (shopNameInfo.brandList.length-1))}}">、</text>
            </block>
          </view>
        </view>
      </view>
      <view class='introduce-text' wx:if="{{shopNameInfo.workYear}}">
        <text class='shop-color'>从业年限</text>
        <text wx:if="{{shopNameInfo.workYear}}" style="color:#363636;">{{shopNameInfo.workYear}} 年</text>
      </view>
      <view class='introduce-text-info' wx:if="{{shopNameInfo.managerRemark}}">
        <view class='introduce-info'>
          <text>个人介绍</text>
        </view>
        <view class="introduce-content">
          <text class="self-intro" style="color:#363636;">{{shopNameInfo.managerRemark}}</text>
        </view>
      </view>
    </view>
    <view wx:if="{{shopNameInfo.userPics.length>0}}" class="{{(shopNameInfo.userPics.length > 2)?'shopkeeper-box-merchant':'shopkeeper-box-merchant2'}}">
      <text class='shop-name'>商家资质</text>
      <text class='shop-text'>商家资质证书一览无余</text>
      <scroll-view wx:if="{{shopNameInfo.userPics.length>0}}" scroll-x="{{(shopNameInfo.userPics.length > 2)?true:false}}" class="shopkeeper-scroll">
        <view wx:for="{{shopNameInfo.userPics}}" wx:for-item="photo" class="{{(shopNameInfo.userPics.length > 2)?'shopkeeper-photo':'shopkeeper-photo2'}}" wx:for-index="index" wx:key="index">
          <image class="{{(shopNameInfo.userPics.length > 2)?'shop-img':'shop-img2'}}" src="{{imageUrl + photo.url}}" mode="aspectFill" data-urls="{{shopNameInfo.userPics}}" data-url="{{photo.url}}" bindtap="showImage"></image>
        </view>
      </scroll-view>
    </view>
    <view wx:else class="shopkeeper-box">
      <view>
        <text class='shop-name'>商家资质</text>
      </view>
      <view>
        <text class='shop-text'>商家资质证书一览无余</text>
      </view>
      <view>
        <text class="shop-text-store">该商户未上传相关照片</text>
      </view>

    </view>
    <view class='shop-list-table'>
      <text class='shop-name-service'>主营服务</text>
      <text class='shop-text'>为您提供多项服务报价</text>
      <view class='list-table'>
        <view class='list-row' wx:for="{{shopNameInfo.garageTaskList}}" wx:for-item="garage" wx:for-index="index" wx:if="{{index<10}}" wx:key="index">
          <block>
            <view class='list-td-service'>
              <image src='/images/other.png' class='list-icon'></image>
              <text class="list-td-service-title">{{garage.name}}</text>
            </view>
            <view class='list-price' wx:if="{{garage.price>=0}}">
              <view class='list-td-price' style="color:#FC4C5A;">¥\t{{garage.price}}\t起</view>
            </view>
            <view class='list-price' wx:else>
              <view class='list-td' style="color:#FC4C5A;">到店咨询</view>
            </view>
          </block>
        </view>
      </view>
    </view>
  </view>
</view>
<button class='list-bottom' open-type="contact" session-from="weapp">
  联系 Ta
</button>
<view class="modal-mask" bindtap="hideModal" catchtouchstart='preventTouchMove' wx:if="{{showModal}}">
</view>
<view class="modal-dialog" wx:if="{{showModal}}">
  <view class="modal-content">该店长暂未上传联系方式</view>
  <view class="modal-footer">
    <view class="btn-confirm" bindtap="onConfirm">关闭</view>
  </view>
</view>
