@import '../../utils/flex.wxss';
.person{
  width:90%;
  margin:0 auto;
}
.person-img{
  position: relative;
  height: 300rpx;
}
.person-pic{
  position: absolute; 
  width:100%;
  height:100%;
  top:0;
  left:0;
  z-index: -1;
}
 .userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid white;
  border-radius: 50%; 
  margin: 10rpx 0;
} 
.userinfo-nickname {
  display: block;
  font-size: 18px;
}
.no-scroll {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.personLink-image {
  width: 100%;
  height: 320rpx;
}
.my-party{
  margin-top:100rpx;
}
.my-post,.my-join{
  margin: 40rpx 80rpx;
}
.line{
    border: 1px solid #F6F5FA;
}